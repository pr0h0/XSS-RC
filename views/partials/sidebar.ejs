<script>
  document.addEventListener("DOMContentLoaded", () => {
    const sidebar = document.getElementById("sidebar");
    const sidebarToggle = sidebar.querySelector("#sidebar-toggle");

    sidebarToggle.addEventListener("change", () => {
      localStorage.setItem("sidebar-toggle", sidebarToggle.checked);
    });

    if (localStorage.getItem("sidebar-toggle") === "true") {
      sidebarToggle.checked = true;
    } else {
      sidebarToggle.checked = false;
    }

    const path = window.location.pathname;
    const links = sidebar.querySelectorAll("nav li a[href]");
    links.forEach((link) => {
      if (new URL(link.href).pathname === path) {
        link.classList.add("text-black");
        link.querySelector('svg').style.color = "#000000";
      }
    });
  })
</script>